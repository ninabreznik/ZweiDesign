    <i class="fa fa-check-square-o"> <%= I18n.t'project-new.field-4'%></i>  
    <i class="fa fa-check-square-o"> <%= I18n.t'project-new.field-5'%></i> 
    <i class="fa fa-check-square-o"> <%= I18n.t'project-new.field-6'%></i> 
    <i class="fa fa-check-square-o"> <%= I18n.t'project-new.field-7'%></i>
